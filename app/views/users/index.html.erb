<h1>All Culinary Staff</h1>

<% @users.each do |user| %>
  <div class="index_user">
     <%= link_to user.username, user_path(user) %>
     <%= user.role %>
  </div>
  <% if current_user.admin? %>
    <div class="modify">
      <%= link_to "Remove #{user.username}", admin_user_path(user), method: :delete, data: {confirm: "Remove #{user.username} from culinary staff?"} %>
      <%= link_to "Edit #{user.username}", edit_admin_user_path(user) %>
    </div>
  <% end %>
<% end %>
