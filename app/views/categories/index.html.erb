<h1>All Categories</h1>

<%= link_to "New Category", new_category_path %>

<% @categories.each do |category| %>
  <div class="index-category">
    <%= category.name %>
  </div>
  <% if current_user.admin? %>
  <div class="modify">
    <%= link_to "Edit Category", edit_admin_category_path(category) %>
  </div>
  <% end %>
<% end %>
