<h1>All Categories</h1>

<%= link_to "New Category", new_category_path %>

<% @categories.each do |category| %>
  <div class="index-category">
    <%= link_to category.name, category_path(category) %>
  </div>
  <% if current_user.admin? %>
  <div class="modify">
    <%= link_to "Edit", edit_admin_category_path(category), class: "edit#{category.name}" %>
    <%= link_to "Delete", admin_category_path(category), method: :delete, class: "delete#{category.name}" %>
  </div>
  <% end %>
<% end %>
