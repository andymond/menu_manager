<%= form_for @recipe do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :instructions %>
  <%= f.text_field :instructions %>

  <%= f.label :employee_credit %>
  <%= f.text_field :employee_credit %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.submit "Submit Recipe For Review" %>

<% end %>
